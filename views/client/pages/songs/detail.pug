extends ../../layouts/default.pug
include ../../mixins/box-head.pug

block css 
  link(href=" https://cdn.jsdelivr.net/npm/aplayer@1.10.1/dist/APlayer.min.css" rel="stylesheet")

block main
  .singer-detail
    .container.my-3
      .row
        .col-12
          .inner-title #{song.title}

          .inner-actions
            div(class="inner-action inner-time")
              <i class="fa-regular fa-clock"></i> 20/10/2023
            div(class="inner-action inner-singer")
              <i class="fa-solid fa-microphone-lines"></i>  #{song.singer.fullName}
            div(class="inner-action inner-topic")
              <i class="fa-solid fa-music"></i>  #{song.topic.title}
            div(class="inner-action inner-like" 
            song-id = song._id
            )
              <i class="fa-regular fa-thumbs-up"></i> 
                span #{song.like} thích
            div(class=`inner-action inner-heart + ${song.favorite ? "active" : "" }`
            song-id = song._id
            )
              <i class="fa-regular fa-heart"></i> Bài hát yêu thích

          .inner-play
            .inner-avatar
              img(src= song.avatar)
            .inner-audio
              div(id="aplayer" data-song= song data-singer = song.singer)

          .inner-desc
            .inner-label Mô tả
            .inner-text
              | #{song.description}

          .inner-desc
            .inner-label Lời bài hát
            .inner-text  
              | !{song.lyrics}

block js 
  script(src="https://cdn.jsdelivr.net/npm/aplayer@1.10.1/dist/APlayer.min.js")